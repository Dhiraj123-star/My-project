import java.util.Scanner;
public class commissionPer3 {
    double res;
    commissionPer3(double x,double y){
        res=(y/100)*x;

    }
}
class calculatecommission{
    public  static void main(String[]a){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the amount !!!");
        double amount=sc.nextDouble();
        System.out.println("enter the commission percentage ");
        double com=sc.nextDouble();
        commissionPer3 com1=new commissionPer3(amount,com);
        System.out.println("the commission amount is :"+com1.res);

    }
}
