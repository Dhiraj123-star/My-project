using System;

namespace ConsoleApplication124
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            int n, r, sum = 0;
            Console.WriteLine("enter the number :");
            n = int.Parse(Console.ReadLine());
            while (n > 0)
            {
                r = n % 10;
                sum += r;
                n /= 10;
                
            }
            Console.WriteLine("sum of the given number is :"+sum);
        }
    }
}
