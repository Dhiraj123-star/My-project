using System;

namespace ConsoleApplication125
{
    internal class ReverseNumProgram
    {
        public static void Main(string[] args)
        {
            int n, reverse = 0, rem;
            Console.WriteLine("enter the number which is to be reversed :");
            n = int.Parse(Console.ReadLine());
            while (n != 0)
            {
                rem = n % 10;
                reverse = reverse * 10 + rem;
                n /= 10;
                
            }
            Console.WriteLine("reverse of the given number is :"+reverse);
        }
    }
}
