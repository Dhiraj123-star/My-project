#creating a file which count upper and lower case
def string_test(s):
    d={"upper_case":0,"lower_case":0}
    for c in s:
        if c.isupper():
            d["upper_case"]+=1
        elif c.islower():
            d["lower_case"]+=1
    print("no.of upper case letters :",d["upper_case"])
    print("no.of lower case letters:",d["lower_case"])
s=input(" please enter your string!!")
string_test(s)
