package main

import "fmt"

/* function for finding the maximum of two numbers

 */
func max(a,b int)int {
	if (a > b) {
		return a
	} else {

		return b
	}
}

func main() {
	fmt.Println("enter your first number :")
	var a,b int
	fmt.Scanln(&a)
	fmt.Println("enter the second number:")
	fmt.Scanln(&b)
	//calling the function
	max:=max(a,b)
	fmt.Println("the maximum is:",max )
	
}
